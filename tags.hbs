<form>
 <table class="center">
  <tr>
    <th>Tag</th>
    <th><button type="button" id="deleteall">Delete All</button></th>
  </tr>
  {{#each tags}}
  <tr>
    <td>{{tag}}</td>
    <td><button type="button" class="delete" id="{{tag}}">Delete</button></td>
  </tr>
  {{/each}}
</table>
 <table class="center">
  <tr>
    <td><input type="text" name="tag" id="tag"></td>
  </tr>
</table>  
  <footer class="sheet-footer flexrow">
    <button type="button" name="submit" class="submit" id="submit">
        <i class="fa fa-check"></i> Submit
    </button>
  </footer>
</form>